<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AppBetzada.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AppBetzada"
    Shell.FlyoutBehavior="Flyout"
    Title="AppBetzada">

    <ShellContent
        Title="Jogo"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage"
        Icon="bet.png"/>

    <ShellContent
    Title="Saldo"
    Route="Saldo" 
    Icon="saldo.png">

        <local:TelaSaldo/>

    </ShellContent>
</Shell>
